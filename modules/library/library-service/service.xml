<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder package-path="com.library">
    <namespace>Library</namespace>

    <entity name="Author" local-service="true" remote-service="true" uuid="true">
        <column name="authorId" type="long" primary="true" />
        <column name="name" type="String" />
        <column name="nationality" type="String" />
        <finder name="Name" return-type="Collection">
            <finder-column name="name" />
        </finder>
    </entity>

    <entity name="Book" local-service="true" remote-service="true" uuid="true">
        <column name="bookId" type="long" primary="true" />
        <column name="title" type="String" />
        <column name="publicationYear" type="int" />
        <column name="authorId" type="long" />
        <finder name="AuthorId" return-type="Collection">
            <finder-column name="authorId" />
        </finder>
        <reference entity="Author" package-path="com.library" />
    </entity>
</service-builder>
